<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.WithActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" targetApi="m">true</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="AppBottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/AppBottomSheetShapeStyle</item>
    </style>

    <style name="AppBottomSheetShapeStyle" parent="">
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Search Toolbar -->
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/colorAccentLight</item>
        <!-- Icon Color -->
        <item name="android:textColorSecondary">@color/colorAccentLight</item>
        <item name="android:drawable">@drawable/shape_gray_round_box</item>
    </style>

    <!-- Spinner Toolbar -->
    <style name="AppSpinner.Sort" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorAccentLight</item>
        <item name="android:textColorSecondary">@color/colorAccentLight</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ToolBar -->
    <style name="AppToolBar" parent="AppTheme">
        <item name="android:background">@color/backgroundLight</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:titleTextColor">@color/colorPrimary</item>
        <item name="android:subtitleTextColor">@color/colorPrimary</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="AppToolBar.Dark" parent="AppToolBar">
        <item name="android:background">@color/backgroundDark</item>
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textColorSecondary">@color/colorAccentDark</item>
        <item name="android:titleTextColor">@color/colorAccentDark</item>
        <item name="android:subtitleTextColor">@color/colorAccentDark</item>
        <item name="android:tint">@color/colorAccentDark</item>
    </style>

    <!-- Font Styles -->
    <style name="h1">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="h4">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="h5">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="h6">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="b1">
        <item name="android:fontFamily">@font/karla</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="b2">
        <item name="android:fontFamily">@font/karla</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="b3">
        <item name="android:fontFamily">@font/karla</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="b4">
        <item name="android:fontFamily">@font/karla</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Data Widget Themes -->
    <style name="regional_case_overview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/shape_gray_round_box</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DataFieldBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@drawable/shape_rounder_highlight</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DataFieldBox.Ring" parent="DataFieldBox">
        <item name="android:background">@drawable/shape_ring_highlight</item>
    </style>

    <style name="SummaryFieldBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/shape_round_highlight_box</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="SummaryFieldBox.Heading" parent="SummaryFieldBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/shape_gray_round_box</item>
    </style>

    <style name="SummaryFieldBox.Square" parent="SummaryFieldBox">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_height">108dp</item>
    </style>

    <style name="corona_access_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_corona_access</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BottomSheetGrapple">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/shape_grapple</item>
        <item name="android:contentDescription">@string/bottom_sheet_grapple</item>
    </style>

</resources>
