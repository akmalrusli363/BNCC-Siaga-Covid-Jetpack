<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/indigo2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingHorizontal="8dp"
    android:paddingVertical="16dp"
    tools:showIn="@layout/activity_world_statistics">

    <LinearLayout
        android:id="@+id/llTotalCaseCount"
        style="@style/SummaryFieldBox.Heading"
        android:backgroundTint="@color/indigo"
        app:layout_constraintBottom_toTopOf="@id/spacer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/pbTotalCase"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorAccentDark"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTotalCaseCount"
            style="@style/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark"
            tools:text="15000000" />

        <TextView
            android:id="@+id/tvTotalCaseCountLabel"
            style="@style/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/total_cases"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark" />

    </LinearLayout>

    <Space
        android:id="@+id/spacer1"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        app:layout_constraintBottom_toTopOf="@id/llRecoveredCountBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llTotalCaseCount" />

    <LinearLayout
        android:id="@+id/llActiveCaseCountBox"
        style="@style/SummaryFieldBox"
        android:backgroundTint="@color/confirmedColor"
        app:layout_constraintEnd_toStartOf="@+id/llRecoveredCountBox"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spacer2"
        app:layout_constraintTop_toBottomOf="@id/spacer1">

        <ProgressBar
            android:id="@+id/pbActiveCase"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorAccentDark"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvActiveCaseCount"
            style="@style/h5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/loading"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark"
            tools:text="3697700" />

        <TextView
            android:id="@+id/tvActiveCaseCountLabel"
            style="@style/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/positive"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRecoveredCountBox"
        style="@style/SummaryFieldBox"
        android:backgroundTint="@color/recoveredColor"
        app:layout_constraintEnd_toStartOf="@+id/llDeathCountBox"
        app:layout_constraintStart_toEndOf="@+id/llActiveCaseCountBox"
        app:layout_constraintBottom_toTopOf="@id/spacer2"
        app:layout_constraintTop_toBottomOf="@id/spacer1">

        <ProgressBar
            android:id="@+id/pbRecovered"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorAccentDark"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRecoveredCount"
            style="@style/h5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/loading"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark"
            tools:text="14530800" />

        <TextView
            android:id="@+id/tvRecoveredCountLabel"
            style="@style/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recovered"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDeathCountBox"
        style="@style/SummaryFieldBox"
        android:backgroundTint="@color/deathColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/llRecoveredCountBox"
        app:layout_constraintBottom_toTopOf="@id/spacer2"
        app:layout_constraintTop_toBottomOf="@id/spacer1">

        <ProgressBar
            android:id="@+id/pbDeath"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorAccentDark"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDeathCount"
            style="@style/h5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/loading"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark"
            tools:text="1424300" />

        <TextView
            android:id="@+id/tvDeathCountLabel"
            style="@style/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/death"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark" />
    </LinearLayout>

    <Space
        android:id="@+id/spacer2"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvProvidedData"/>

    <TextView
        android:id="@+id/tvProvidedData"
        style="@style/b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/data_source_info"
        android:textColor="@color/colorAccentDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spacer2" />

    <TextView
        android:id="@+id/tvLastUpdated"
        style="@style/b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/last_updated"
        android:textColor="@color/colorAccentDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProvidedData" />

</androidx.constraintlayout.widget.ConstraintLayout>
